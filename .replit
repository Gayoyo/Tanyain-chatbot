entrypoint = "gabot_multi.py"
modules = ["nodejs-20", "python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["glibcLocales"]

[unitTest]
language = "python3"

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[deployment]
run = ["sh", "-c", "python3 gabot_multi.py"]
deploymentTarget = "cloudrun"
build = ["sh", "-c", "npx tailwindcss -i ./static/css/input.css -o ./static/css/output.css --minify"]

[[ports]]
localPort = 5000
externalPort = 80
